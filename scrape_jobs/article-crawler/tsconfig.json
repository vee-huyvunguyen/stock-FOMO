{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "noUnusedLocals": false,
    "lib": ["DOM"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src"],
  "exclude": ["tests", "node_modules"]
}
